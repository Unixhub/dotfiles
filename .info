#!/bin/zsh
# Color and echo
# you might need a few scripts/apps found on my github
           
            e="echo"    
            c0="\033[0m"    # Reset
            c1="\033[0;32m" # Green
            c2="\033[0;33m" # Yellow
            c3="\033[1;31m" # RED
            c4="\033[0;31m" # Red
            c5="\033[0;35m" # Purple
            c6="\033[0;36m" # Blue

# Term title 

echo -n "\033]0;Info Script\007"
						
# OS information
OS=$(sw_vers|awk '/ProductName/{print $2, $3, $4}')
VERS=$(sw_vers|awk '/ProductVersion/{print $2}')
BUILD=$(sw_vers|awk '/BuildVersion/{print $2}')
#WM=$(echo 2bwm)
#CPU=$(sysctl -n machdep.cpu.brand_string|awk '{print $1,$2,$3,$4}') 
RAM=$(sysctl -n hw.memsize|awk '{printf("%d", $1/1e+06)}')
#VCARD=$(system_profiler SPDisplaysDataType|awk '/Chipset/{print $3,$4,$5}') 
#VRAM=$(system_profiler SPDisplaysDataType|awk '/VRAM/{print $3,$4,$5,$6,$7}')
MODEL=$(sysctl -n hw.model) 
DISK_USAGE=$(df | awk '/disk0s2/{print$5}')
PORTS=$(pkg_info|awk 'END {gsub(/\ /, "");print NR}')
SHELL=$(echo $SHELL)
#UPTIME=$(justup)
# Printing the apple

$e "${c3}OS:     ${c0}$OS $VERS ($BUILD)"
$e "${c3}Kernel: ${c0}`uname -mrs`"
#$e "${c3}Uptime: ${c0}$UPTIME" 
$e "${c3}Packs:  ${c0}$PORTS"
$e "${c3}Shell:  ${c0}$SHELL"
$e "${c3}Theme:  ${c0}yrmt (Beastie)"
#$e "${c3}WM:     ${c0}$WM"
$e "${c3}Ram:    ${c0}$RAM MB"
#$e "${c3}Cpu:   ${c0}$CPU"
#$e "${c3}VRam:  ${c0}$VCARD @ $VRAM"
$e "${c3}Model:  ${c0}$MODEL"
$e "${c3}Disk:   ${c0}$DISK_USAGE"
$e "${c3}Term:   ${c0}`echo $TERM`"

