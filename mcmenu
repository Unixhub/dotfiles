  #! /bin/sh
           9menu -bg "#121212" -fg "#999999" \
            -popup -font fixed \
            'Term:urxvt' \
						'Web:chrome' \
            'Music:urxvt -e cmus' \
            'IRC:urxvt -e irssi' \
						'Time:urxvt -e datclock' \
            ':' \
            'Htop:urxvt -e htop' \
            'Menu:dmenu_run' \
            'TTY:pkill X' \
            'Reboot:reboot' \
            'Shutdown:shutdown -p now' \
            ':' \
            'close:'

